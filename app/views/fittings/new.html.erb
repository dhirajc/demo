<h1>Fittings</h1>


<%= form_for @fitting  do |f| %>

<form>
  
  <div class="form-group">
  	<%= f.label :height %>
  	<%= f.text_field :height , :class => "form-control" ,  :placeholder => "height"  %>
  </div>
  
  <div class="form-group">
  	<%= f.label :shrit_size %>
  	<%= f.text_field :shrit_size , :class =>"form-control", :placeholder => "shirt_size" %>
  </div>
  
  <div class="form-group">
  	<%= f.label :pant_size %>
    <%= f.text_field :pant_size , class:  "form-control
    " , placeholder: "pant_size" %>
  </div>

  <div class="form-group">
    <%= f.label :shoe_size %>
    <%= f.text_field :shoe_size,class:  "form-control
    " , placeholder: "shoe_size"  %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight,class:  "form-control
    " , placeholder: "shoe_size"  %>
  </div>

  <%= f.hidden_field :look_id, :value => params[:look_id] %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.submit "Submit", class: "btn btn-default" %>

  <% end %>
  </form>