<%= form_for(@looks) do |f| %>
 <div class="container">
 	  <div class="form-group"> 
		<%#= image_tag @product.avatar.url(:preview)%>
	  </div>
	  <div class="form-group">
	  	<%= f.label :name %><br>
    	<%= f.text_field :name, class: "form-control" %>
	  </div>
	  <div class="form-group">
	  	<%= f.label :neckwear %><br>
    	<%= f.select(:neckwear ,  Accessory.where("variant IN (?)", "neckwear").pluck(:acc_name),{:prompt => 'Please select bow type' , :id => "test1" }) %>
	  </div>
	  <img id="test">
	  </div>
	  <div class="form-group">
	  	<%= f.label :shirts %><br>
    	<%= f.select(:shirts,  Accessory.where("variant IN (?)", "shirts").pluck(:acc_name),{:prompt => 'Please select shirt type'}) %>
	  </div>
	  <div>
	  	<%= @a %>
	  </div>	  
	  <div class="form-group">
	  	<%= f.label :shoes %><br>
    	<%= f.select(:shoes, Accessory.where("variant IN (?)", "shoes").pluck(:acc_name),{:prompt => 'Please select shoe type'}) %>
	  </div>
	  	<%#= f.hidden_field :product_id, :value => @product.id%>
	  <%# binding.pry %>
	  	<%= f.submit 'Submit', class: 'btn btn-default' %>  	
  </div>
<%end%>

