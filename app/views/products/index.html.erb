<div class="row">
	<% @products.each do |p| %>
<div class="col-sm-6 col-md-4">
<div class="thumbnail">
<%= image_tag p.avatar.url(:thumb) %>
<div class="caption">
<h3><%= p.name %></h3>
<p><%= p.description%></p>
<p>
<%= link_to 'Show',  products_show_path(p) , :class => "btn btn-primary"%>
<%= link_to 'Customize',  {:controller => "looks", 
                                       :action => "new", 
                                       :product_id => p.id, 
                                        } ,  :class => "btn btn-default" %>
                                        </p> 
</div>
</div>
</div>
<% end %>
</div>


