<h1>Edit User</h1>
 
<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :contact_no %><br>
    <%= f.text_field :contact_no %>
  </p>
 
 <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
   <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>