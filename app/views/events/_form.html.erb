<%= form_for @event do |f| %>

	<div class ="form-group">
		<%= f.label :event_name %>
		<%= f.text_field :event_name %>
	</div>

	<div class ="form-group">
		<%= f.label :event_date%>
		<%= f.text_field :event_date%>
	</div>

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<div class ="form-group">
		<%= f.submit "Save Event" %>
	</div>
	
<% end %>



<table class="table table-bordered">

<% if @events.exists? %>

<tr>
	<th>Event Name</th>
	<th>Event Date</th>
	<th>Action</th>
</tr>

<tr>

<% @events.each do |e| %>
<td><%= e.event_name %></td>
<td><%= e.event_date %></td>
<% if %>
<td><%= link_to "Edit", edit_event_path(e) %></td>	
<% end %>
<td ><button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Invite</button></td>
</tr>
<% end %>
<% end %>
  
</table>
</br>


<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">

	<div class="modal-dialog modal-sm">

	<div class="modal-content">
<div class="container">
	<h3>Invite Form</h3>
	<br />
	<%= form_tag invite_path do  %>
		
		<div class="form-group">
			<%= label_tag :email1 %>
			<%= text_field_tag :email1 , params[:email1] %>
		</div>

		<div class="form-group">
			<%= label_tag :email2 %>
			<%= text_field_tag :email2 , params[:email2] %>
		</div>

		<%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>

</div>
<% end %>
</div>
</div>
</div>
