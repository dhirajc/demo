<%= form_for @event do |f| %>

	<div class ="form-group">
		<%= f.label :event_name %>
		<%= f.text_field :event_name %>
	</div>

	<div class ="form-group">
		<%= f.label :event_date%>
		<%= f.text_field :event_date%>
	</div>

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<div class ="form-group">
		<%= f.submit "Save Event" %>
	</div>
	
<% end %>



<table class="table table-bordered">

