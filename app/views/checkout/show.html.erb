<div class="full-height scroll-bar">
	<div class="pad-bottom"></div>
		<h3>Confirm your order</h3>
		<% if @current_order.ordered_items.length == 0 %>
			<p>Your cart is still empty</p>
			<% raise "if" %>
		<% else %>
			<%= render "orders/current_order" %>
			 <div>
				<%= link_to "Back to my cart", carts_path, :class => "btn btn-success in-line left" %>
				<%= button_to 'Make payment', @current_order.paypal_url(@current_user, payment_completed_url), :class => "btn btn-success in-line left" %>
			</div> 
			<% end %>
		</div>
</div>