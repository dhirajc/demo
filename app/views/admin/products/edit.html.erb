<h1>Editing Product</h1>
 
<%= form_for :product, url: admin_product_path(@product), method: :patch do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
 <p>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back',  new_admin_product_path %>