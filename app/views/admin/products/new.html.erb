<table class="table table-bordered">

<% if @products.exists? %>

<tr>
	<th>Name</th>
	<th>Description</th>
	<th>Image</th>
</tr>

<tr>

<% @products.each do |p| %>
<td><%= p.name %></td>
<td><%= p.description%></td>
<td><%= image_tag p.avatar.url(:thumb) %></td>	
<td><%= link_to 'Show',  products_show_path(p) %></td>
<td><%= link_to 'Edit',  edit_admin_product_path(p) %></td>
<td><%= link_to 'Delete' ,admin_product_path(p),method: :delete,class: "btn btn-primary" ,  data: { confirm: 'Are you sure?' } %>
 </td> 
</tr>

<% end %>
<% end %>
  
</table>
</br>

<%= form_for @product ,  :url  => admin_products_path, html: { multipart: true }  do |f| %>
<form>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" ,:placeholder => "Name" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description , :class => "form-control" , :placeholder => "Description" %>
  </div>
  <div class="form-group">
  	<%= f.label :image %>
    <%= f.file_field :avatar %>
  </div>
  <%= f.submit "Submit", :class => "btn btn-default" %>
  <% end %>
</form>